<style>
	.active-product-area {
		padding-top: 70px;

	}

	.single-product {
		margin-bottom: 1px;
	}
</style>

<section class="banner-area">
	<div class="container">
		<div class="row justify-content-center  pt-md-5 pt-lg-5  pt-3 ">
			<div class="col-lg-12 col-md-12 pt-md-5 pt-lg-5 pt-3  ">
				<div class="pt-md-5 pt-lg-5 pt-xl-5 pb-5 pt-3  ">
					<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
						<div class="carousel-inner ">
							<div class="carousel-item active ">
								<img src="https://static-ecapac.acer.com/media/magestore/bannerslider/images/2/2/2205_nitro-5_estore-banner_1920x720.jpg"
									class="d-block w-100" alt="First slide">
							</div>
							<div class="carousel-item">
								<img class="d-block w-100"
									src="https://static-ecapac.acer.com/media/magestore/bannerslider/images/2/2/2205_smb-bundle-banner_1920x720.jpg"
									alt="Second slide">
							</div>
						</div>
						<a class="carousel-control-prev" href="#carouselExampleControls" role="button"
							data-slide="prev">
							<span style="color:transparent " class="carousel-control-prev-icon"
								aria-hidden="true"></span>
							<span class="sr-only">Previous</span>
						</a>
						<a class="carousel-control-next" href="#carouselExampleControls" role="button"
							data-slide="next">
							<span class="carousel-control-next-icon" style="color:transparent "
								aria-hidden="true"></span>
							<span class="sr-only">Next</span>
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>



<section class="brand-area pb-md-2 pb-lg-2 pb-xl-2 px-4 pt-5">
	<div class="container pt-5">

		<div class="row justify-content-center">
			<div class="col-lg-6 text-center">
				<div class="section-title">
					<h3 style="color:#706b63" >POPULAR BRANDS</h3>
				</div>
			</div>
		</div>

		<div class="row">
			{{#each brand}}
			<a class="col single-img" href="/brand/{{this.brandName}}">
				<img class="img-fluid d-block mx-auto" src="/uploads/{{this.logo}}" alt="">
			</a>
			{{/each}}
			
		</div>
	</div>
</section>

<!-- start product Area -->
<section class=" section_gap">
	<!-- single product slide -->
	{{!-- <div class="single-product-sliders"> --}}
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-6 text-center">
					<div class="section-title">
						<h3 style="color:#706b63" >LATEST PRODUCTS</h3>
					</div>
				</div>
			</div>
			<div class="row ">
				{{#each products}}
				<!-- single product -->
				<div class="col-lg-3 col-6 pb-5">
					<div class="single-product ">
						<a href="/viewProduct/{{this._id}}"><img class="img-fluid border border-warning rounded" src="/uploads/{{this.image.[0].image1}}"
							alt=""></a>
						<div class="product-details ">
							<h6><a href="/viewProduct/{{this._id}}">{{this.productName}}</a></h6>
							<div class="price">
								<h6>Rs {{this.price}}</h6>
								<h6 style="color:darkred" class="l-through">Rs {{this.MRP}}</h6>
								<h6 style="color:darkred">{{this.discount}} % off</h6>
							</div>

							{{#if ../user}}
							<div class="prd-bottom ">

								<span class="social-info" onclick="addToWishlist('{{this._id}}')">
									<span class="lnr lnr-heart"></span>
									<p class="hover-text"> Wishlist</p>
								</span>

								<span class="social-info" onclick="addToCart('{{this._id}}')">
									<span class="ti-bag"></span>
									<p class="hover-text">add Cart</p>
								</span>
							</div>
							
                          {{else}}
							<div class="prd-bottom ">

								<a href="/login"><span class="social-info">
									<span class="lnr lnr-heart"></span>
									<p class="hover-text"> Wishlist</p>
								</span></a>

								<a href="/login"><span class="social-info" >
									<span class="ti-bag"></span>
									<p class="hover-text">add Cart</p>
								</span></a>
							</div>
							{{/if}}

						</div>
					</div>
				</div>
				{{/each}}
			</div>
		</div>
	</div>

	
</section>

<script>
	function addToWishlist(proId) {
		$.ajax({
			url: "/AddToWishlist/" + proId,
			methode: "get",
			success: (Response) => {

				if (Response.modifiedCount == 1) {

					let count = $('#wishCount').html()
					count = parseInt(count) + 1
					$("#wishCount").html(parseInt(count))


				}
			}
		})



	}
</script>

<script>
	function addToCart(proId) {

		$.ajax({
			url: "/AddToCart/" + proId,
			methode: "get",
			success: (Response) => {


				if (Response.modifiedCount == 1) {
					let count = $('#cartCount').html()
					count = parseInt(count) + 1
					$("#cartCount").html(parseInt(count))

				}
			}
		})
	}

</script>